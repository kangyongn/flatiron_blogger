<main role="main">
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>Welcome, <%= @user.name %>!</h1>
          <hr>
          <h2>My Mod</h2>
          <h4><%= link_to @user.cohort.name, @user.cohort %> <i>(Mod <%= @user.cohort.mod %>)</i></h4>
          <hr>
          <h2>Assign Blog</h2>
          <a class="font-flatiron btn btn-secondary" href="/blogs/new" role="button">Assign Blog &raquo;</a><br>
          <hr>
          <h2>Blogs Due</h2>

          <% @students.each do |student| %>
          <% student.blogs.each do |blog| %>
          <% if blog.title == nil && blog.due_date.present? %>
          <%= student.name %>, <i><%= blog.due_date %></i><br>
          <% break %>
          <% end %>
          <% end %>
          <% end %>
        </div>

        <div class="col-md-6">
          <h2>My Students</h2>
          <% @students.each do |student| %>
          <%= link_to student.name, student_path(student) %><br>
          <a class="font-flatiron btn btn-secondary" href="/students/<%= student.id %>/edit" role="button">Move <%= student.name %> &raquo;</a><br><br>
          <% end %>
        </div>
      </div>
      <hr>
    </div>
  </div>
</main>

<footer class="container">
  <p>&copy; Flatiron Blogger 2019-2019</p>
</footer>

