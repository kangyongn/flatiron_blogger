<main role="main">
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% if flash[:errors].present? %>
          <% flash[:errors].each do |message| %>
          <%= message.downcase.capitalize %>.<br>
          <% end %>
          <hr>
          <% end %>
          <h1>Signup</h1>
          <hr><br>
          <div class="form-group">
            <form action='/users' , method='post'>
              <label for="name" class="sr-only">Name</label>
              <input type="text" id="name" class="form-control" name="user[name]" placeholder="Name" required><br>
              <label for="username" class="sr-only">Username</label>
              <input type="text" id="username" class="form-control" name="user[username]" placeholder="Username" required><br>
              <label for="password" class="sr-only">Password</label>
              <input type="password" id="password" class="form-control" name="user[password]" placeholder="Password" required><br>
              <label for="password_confirmation" class="sr-only">Confirm Password</label>
              <input type="password" id="password_confirmation" class="form-control" name="user[password_confirmation]" placeholder="Confirm Password" required><br>
              <select class="form-control" name="user[role]">Role
                <option value="Student">Student</option>
                <option value="TCF">TCF</option>
              </select>
              <br>
              <select class="form-control" name="user[cohort_id]">
                <%= @cohorts.each do |cohort|  %>
                <option value=<%= cohort.id %>><%= cohort.name %></option>
                <% end %>
              </select>
              <br>
              <button class="btn btn-lg btn-primary btn-block basic-font" type="submit">Signup</button>
            </form>
          </div>
        </div>
      </div>
      <br>
      <hr>
    </div>
  </div>
</main>

