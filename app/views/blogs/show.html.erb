<main role="main">
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1><%= @blog.title %></h1>
          <% if @blog.user.id == session[:user_id] %>
          <h3><i>By: Me</i></h3>
          <% else %>
          <h3><i>By: <%= @blog.user.name %></i></h3>
          <% end %>
          <hr>
          <% @blog.new_line.each do |paragraph| %>
          <p><%= paragraph %></p>
          <% end %>
          <% if @blog.user.id == session[:user_id] %>
          <a class="font-flatiron btn btn-secondary" href="/blogs/<%= @blog.id %>/edit" role="button">Edit Blog &raquo;</a>
          <a class="font-flatiron btn btn-secondary" href="/blogs/<%= @blog.id %>" data-method='delete' role="button" onclick="return confirm('Delete this post?')">Delete Blog &raquo;</a>
          <% end %>
          <hr>
          <% unless @blog.user.id == session[:user_id] %>
          <i>Read more blogs from, <%= link_to @blog.user.name, student_path(@blog.user) %></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="container">
  <p>&copy; Flatiron Blogger 2019-2019</p>
</footer>

