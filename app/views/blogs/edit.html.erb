<main role="main">
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Blog Form</h1>
          <% if @blog.title == nil %>
          <h5>Due by:
            <i><%= @blog.due_date %></i>
            <h5>
              <% end %>
              <hr>
              <div class="form-group">
                <form action="/blogs/<%= @blog.id %>" ,="," method='post'>
                  <input type="hidden" name="_method" value='patch'>
                  <label for="title">Title</label>
                  <input type="text" id="title" class="form-control" name="blog[title]" placeholder="Title" value="<%= @blog.title %>" required="required"><br>
                  <label for="content">Blog</label>
                  <textarea class="form-control" rows="10" id="content" name="blog[content]" placeholder="Write your blog here" required="required"><%= @blog.content %></textarea><br>
                  <input type="hidden" id="user_id" name="blog[user_id]" value="<%= @logged_in_user.id %>">
                  <button class="btn btn-lg btn-primary btn-block basic-font" type="submit">Post Blog</button>
                </form>
              </div>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="container">
  <p>&copy; Flatiron Blogger 2019-2019</p>
</footer>

