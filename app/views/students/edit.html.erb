<main role="main">
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Move Student</h1>
          <h3>Change <i><%= @user.name %>'s</i> Mod</h3>
          <hr><br>
          <div class="form-group">
            <%= form_for @user, as: :student, method: 'PATCH', url: "/students/#{@user.id}" do |f| %>
            <%= f.label :cohort %>:
            <%= f.collection_select(:cohort_id, @cohorts, :id, :name, disabled: @user.cohort.id) %>
            <br><br>
            <%= f.submit "Move #{@user.name}",:class => "btn btn-lg btn-primary btn-block basic-font", data: {confirm: "Move #{@user.name}?"}%>
            <% end %>
          </div>
        </div>
      </div>
      <br>
      <hr>
    </div>
  </div>
</main>

