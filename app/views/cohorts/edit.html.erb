<main role="main">
  <div class="jumbotron">
    <div class="container">
      <% if @logged_in_user.role == 'TCF' %>
      <div class="row">
        <div class="col-md-12">
          <h1>Edit Cohort <i><%= @cohort.name %></i></h1>
          <hr>
          <%= form_for(@cohort) do |f| %>
          <%= f.label :name %>:
          <%= f.text_field :name, placeholder: 'Name' %>
          <br><br>
          <%= f.label :mod %>:
          <%= f.select :mod, (1..5), disabled: @cohort.mod %>
          <br><br>
          <button class="btn btn-lg btn-primary btn-block basic-font" type="submit">Update <i><%= @cohort.name %></i></button>
          <% end %>
        </div>
      </div>
      <% end %>
      <br>
      <hr>
    </div>
  </div>
</main>

